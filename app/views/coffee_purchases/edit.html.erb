<div class="container text-center">
  <h1>Editing coffee purchase</h1>

  <%= render "form", coffee_purchase: @coffee_purchase %>  <%-# this will render the form.html.erb to allow the user to edit the current purchase they selected%>

  <br>

  <div class="btn-group">
    <%= link_to "Show this coffee purchase", @coffee_purchase, class:"btn btn-outline-primary" %>  <%-# This is a link to display back the purchase%>
    <%= link_to "Back to coffee purchases", coffee_purchases_path, class:"btn btn-outline-primary" %>  <%-# This will redirect the user to the main coffee_purchases page%>
  </div>
</div>
