<div class="container">
  <div class="container text-center">
    <div class="row">
      <h1>Coffee purchases</h1>
    </div>
    <div class="row">
      <p>Weekly Spending: <%= @weekly_spending %></p>
      <p>Monthly Spending: <%= @monthly_spending %></p>
    </div>
    <div class="row justify-content-center">
        <%= link_to "New coffee purchase", new_coffee_purchase_path, class: "btn btn-primary col-3", role: "button" %>
    </div>
    <div class="row">
        <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <div class="row justify-content-center row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-2" id="coffee_purchases">
    <% @coffee_purchases.each do |coffee_purchase| %>
      <div class="col">
        <div class="card text-center">
          <div class="card-body">
            <%= render coffee_purchase %>

            <a class="card-link"> <%= link_to "Show this coffee purchase", coffee_purchase, class:"btn btn-outline-primary" %> </a>
          </div>
        </div>
      </div>

    <% end %>
  </div>


</div>