<div class="container text-center">
  <div class="row justify-content-md-center">

    <div class="card text-center mt-4 " style="width: 18rem;">
      <%= render @coffee_purchase %>
    </div>

    <p style="color: green"><%= notice %></p>

  </div>

  <div class="btn-group" role="group">
